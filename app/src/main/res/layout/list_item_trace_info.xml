<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp" >

    <RelativeLayout
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:paddingBottom="0dp"
        android:paddingTop="0dp" >

        <ImageView
            android:id="@+id/iv_proc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/pointline"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:layout_marginTop="-1dp"
            android:layout_marginBottom="-1dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_proc_end"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/point2"
            android:paddingBottom="0dp"
            android:layout_marginBottom="0dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_proc_start"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/tick2"
            android:layout_marginTop="0dp"
            android:paddingTop="0dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_proc_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/point_single"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lay_trace_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lay_action_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_hboRecePlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="深圳市宝安区创业花园淘景大厦"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_user_plate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_hdiName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="张三"
                    android:textSize="13sp" 
                    android:textColor="@color/grey3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_hdiPlate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textSize="13sp"
                    android:textColor="@color/grey3" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_actmemoinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_loc_actmemoinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="test2"
                android:textSize="13sp"
                    android:textColor="@color/grey3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_loc_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="test3"
                android:textSize="13sp"
                    android:textColor="@color/grey3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_hboReceTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="2014-12-01 01:11"
                android:textSize="13sp"
                    android:textColor="@color/grey3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical|right"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_call"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/call1"
                    android:gravity="center_vertical"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_local"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/local"
                    android:gravity="center_vertical"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_broswer"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/broswer1"
                    android:gravity="center_vertical"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        
           <!--   <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/hline" /> -->
       
    </LinearLayout>

</LinearLayout>